source "https://rubygems.org"

# Jekyll and plugins
gem "jekyll", "~> 4.3"
gem "jekyll-feed", "~> 0.12"
gem "jekyll-sitemap"
gem "webrick", "~> 1.7"

# For faster builds
gem "kramdown-parser-gfm"

group :development do
  gem "listen", "~> 3.0"
end

# Windows and JRuby compatibility
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end 